<?xml version="1.0" encoding="UTF-8"?>
<config>

	<modules>
		<Aoe_Static>
			<active>true</active>
			<codePool>local</codePool>
			<version>0.0.1</version>
		</Aoe_Static>
	</modules>

	<global>
		<blocks>
			<aoestatic>
				<class>Aoe_Static_Block</class>
			</aoestatic>
		</blocks>
		<models>
			<aoestatic>
				<class>Aoe_Static_Model</class>
			</aoestatic>
		</models>
		<helpers>
			<aoestatic>
				<class>Aoe_Static_Helper</class>
			</aoestatic>
		</helpers>
	</global>

	<frontend>
		<layout>
			<updates>
				<aoestatic>
					<file>aoestatic/aoestatic.xml</file>
				</aoestatic>
			</updates>
		</layout>
		<routers>
			<aoestatic>
				<use>standard</use>
				<args>
					<module>Aoe_Static</module>
					<frontName>phone</frontName>
				</args>
			</aoestatic>
		</routers>

		<events>

			<!-- Setting the response headers to control varnish -->
			<controller_action_predispatch>
				<observers>
					<aoestatic>
						<class>aoestatic/observer</class>
						<method>processPreDispatch</method>
					</aoestatic>
				</observers>
			</controller_action_predispatch>

			<!-- Creating a new layout handle "aoestatic_cacheable" or "aoestatic_notcacheable"-->
			<controller_action_layout_load_before>
				<observers>
					<aoestatic_cacheable>
						<class>aoestatic/observer</class>
						<method>beforeLoadLayout</method>
					</aoestatic_cacheable>
				</observers>
			</controller_action_layout_load_before>

		</events>

	</frontend>

</config>